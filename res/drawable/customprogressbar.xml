<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
    <shape>
        <gradient
                android:startColor="#2a9792"
                android:centerColor="#2a9792"
                android:centerY="1.0"
                android:endColor="#f393bb"
                android:angle="270"
        />
    </shape>
   </item>

  <!-- Define the progress properties like start color, end color etc -->
  <item android:id="@android:id/progress">
    <clip>
        <shape>
            <gradient
                android:startColor="#febb12"
                android:centerColor="#febb12"
                android:centerY="1.0"
                android:endColor="#febb12"
                android:angle="270"
            />
        </shape>
    </clip>
</item>
</layer-list>